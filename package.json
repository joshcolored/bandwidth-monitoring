{
  "name": "bandwidth-dashboard",
  "version": "1.2.0",
  "description": "Internal bandwidth monitoring dashboard",
  "author": "Joshua Grijaldo",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshcolored/bandwidth-monitoring"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.joshcolored.bandwidthmonitoring",
    "productName": "Bandwidth Monitoring Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "assets/app.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bandwidth Monitoring Dashboard",
      "license": "license.txt"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "joshcolored",
        "repo": "bandwidth-monitoring"
      }
    ]
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}