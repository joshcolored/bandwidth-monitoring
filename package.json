{
  "name": "bandwidth-dashboard",
  "version": "1.1.0",
  "description": "Internal bandwidth monitoring dashboard",
  "author": "Joshua Grijaldo",
  "main": "main.js",
  "private": true,

  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },


  "devDependencies": {
     "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.krazene.bandwidthdashboard",
    "productName": "Bandwidth Dashboard",

    "directories": {
      "output": "dist"
    },

    "files": [
      "**/*"
    ],

    "win": {
      "icon": "assets/app.ico",
      "target": "nsis"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bandwidth Monitoring Dashboard",
      "license": "license.txt"
    }
  }
}
